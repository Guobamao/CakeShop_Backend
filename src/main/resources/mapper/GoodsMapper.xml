<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scauzj.mapper.GoodsMapper">
    <select id="pageQuery" resultType="com.scauzj.vo.GoodsVO">
        select g.*, t.name as typeName from goods g
        left join types t on g.type_id = t.id
        <where>
            <if test="typeId != null">
                and g.type_id = #{typeId}
            </if>
        </where>
    </select>

    <update id="updateById">
        update goods
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="typeId != null">
                type_id = #{typeId},
            </if>
            <if test="stock != null">
                stock = #{stock},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="cover != null">
                cover = #{cover},
            </if>
            <if test="image1 != null">
                image1 = #{image1},
            </if>
            <if test="image2 != null">
                image2 = #{image2},
            </if>
            <if test="newGoods != null">
                new_goods = #{newGoods},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>